extends layout

block content
    ul
        li
            a(href='/auth/facebook', target="_blank") Login with Facebook
        li
            a(href='/auth/twitter', target="_blank") Login with Twitter
        li
            a(href='/auth/google', target="_blank") Sign In with Google
        li
            a(href='/auth/vkontakte', target="_blank") Login with VK
        li
            a(href='/auth/yandex', target="_blank") Login with Yandex


    form(action='/login', method='post')
        div
            label Username:
            input(type='text', name='username')
            div
                label Password:
                input(type='password', name='password')
            div
                input(type='submit', value='Log In')