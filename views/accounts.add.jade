extends layouts/main

block content
    h1
        a(href="/accounts?date_range=last_month") Счета
        span &nbsp;/&nbsp;
        span#header-item-name Новый счет

    form#form-add-account.form.forms.forms-columnar(action='')
        .form-message

        .units-row-end
            .unit-50
                .form-item
                    label(for="number") Номер счета
                    input#number.width-100(type='text', value=number)
                .form-item
                    label(for="date") Дата
                    input#date.width-100(type='text', data-metatype='date', value=utils.stringifyDate(new Date()))

            .unit-50
                .form-item
                    label(for="status") Оплачен
                    input#status.stylish(type="checkbox")
                .form-item
                    label(for="contractor") Контрагент
                    .contractor-selection-placeholder

        .units-row-end
            .unit-100
                .form-item
                    input#items(type='hidden')
                    label(for="items") Позиции
                    #items-selector

        .units-row-end
            .unit-100
                .form-item
                    label(for="comment") Комментарий
                    textarea#comment.width-full-size(rows='3', placeholder='Введите текстовый комментарий, если вы хотите, чтобы он появился после списка товаров и услуг')

        hr
        .units-row-end
            .unit-100
                .form-item.no-margin
                    input.button.blue(type='submit', value='Создать счет')
                    input.button#preview(type='button', value='Посмотреть счет')

    script.
        app.sections.accounts.add.init();